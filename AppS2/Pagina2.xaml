<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS2.Pagina2">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Bienvenidos al Sistema U Israel!" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
            </Frame>
            <Entry x:Name="txtUsuario" Placeholder = "Ingrese el Usuario"/>

            <Entry x:Name="txtClave" Placeholder = "Ingrerse la clave" IsPassword="True"/>
            <Button x:Name ="btnAbrir" Text="INGRESE AL SISTEMA" Clicked="btnAbrir_Clicked"/>
            <Label Text="" x:Name="lblMensaje" TextColor="Red"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>